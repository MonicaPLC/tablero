  <title>Vista de Usuarios</title>
</head>

<body>

  <img id="chica" src="chica.gif" width="250px" heigth="250px" alt=" imagen de chica superpoderosa">

  <form class="container" action="/" method="POST">
    <h2>The Dojo Mensagge Board</h2>
    <input class="col-3" name="author" type="text" placeholder="Nombre">
    <input class="col-6" name="message" type="text" placeholder="Mensaje">
    <input class="col-2" type="submit" placeholder="Enviar">
  </form>

  <%for(let post of mensajes){%>
    <div class="container">
      <div>
        <h6>Nuevo Mensaje</h6>
        <q class="mensaje">Mensaje<%=post.message%></q>
        <cite> ~ <%=post.author%> </cite>
        <a class="btnB" href="/delete/<%=post.id%>">Borrar</a>
      </div>

      <div class="form2">
        <form action="/" method="POST">
          <input class="col-3" name="name" type="text" placeholder="Nombre">
          <input class="col-4" name="comment" type="text" placeholder="Mensaje">
          <input class="col-3" type="submit" placeholder="Enviar">
        </form>
      </div>
    </div>
    <%}%>

</body>

</html>